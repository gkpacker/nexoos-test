<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="form">
        <%= form_for @user do |f| %>
          <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
          <%= f.text_field :phone_number, placeholder: "Phone number", class: "form-control" %>
          <%= f.submit class: "btn btn-block btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
